{
  "name": "crowdsale-website",
  "version": "0.1.0",
  "private": true,
  "engines": {
    "node": "8.x",
    "yarn": "0.27.5"
  },
  "dependencies": {
    "axios": "^0.16.2",
    "ethereumjs-util": "^5.1.2",
    "firebase": "^4.3.0",
    "moment": "^2.18.1",
    "react": "^15.6.1",
    "react-dom": "^15.6.1",
    "react-dropzone": "^4.1.2",
    "react-redux": "^5.0.6",
    "react-router": "^4.1.2",
    "react-router-redux": "^5.0.0-alpha.6",
    "react-scripts": "^1.0.13",
    "redux": "^3.7.2",
    "redux-form": "^7.0.3",
    "redux-thunk": "^2.2.0",
    "short-unique-id": "^1.1.0",
    "truffle-contract": "^2.0.5",
    "uglifyjs-webpack-plugin": "1.0.0-beta.2",
    "whatwg-fetch": "2.0.3"
  },
  "devDependencies": {
    "autoprefixer": "^7.1.2",
    "babel-core": "^6.25.0",
    "babel-eslint": "7.2.3",
    "babel-jest": "^21.0.2",
    "babel-loader": "^7.1.2",
    "babel-preset-es2015": "^6.24.1",
    "babel-preset-react-app": "^3.0.2",
    "babel-runtime": "^6.26.0",
    "case-sensitive-paths-webpack-plugin": "^2.1.1",
    "chalk": "^2.1.0",
    "css-loader": "^0.28.4",
    "dotenv": "4.0.0",
    "eslint": "^4.5.0",
    "eslint-config-prettier": "^2.3.0",
    "eslint-config-react-app": "^2.0.0",
    "eslint-config-standard": "^10.2.1",
    "eslint-config-standard-react": "^5.0.0",
    "eslint-loader": "^1.9.0",
    "eslint-plugin-babel": "^4.1.2",
    "eslint-plugin-flowtype": "^2.35.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^5.1.1",
    "eslint-plugin-node": "^5.1.1",
    "eslint-plugin-prettier": "^2.1.2",
    "eslint-plugin-promise": "^3.5.0",
    "eslint-plugin-react": "^7.2.0",
    "eslint-plugin-standard": "^3.0.1",
    "extract-text-webpack-plugin": "^3.0.0",
    "file-loader": "^0.11.2",
    "fs-extra": "^4.0.1",
    "html-webpack-plugin": "^2.30.1",
    "jest": "^21.0.2",
    "lint-staged": "^4.0.3",
    "node-sass-chokidar": "^0.0.3",
    "npm-run-all": "^4.0.2",
    "object-assign": "4.1.1",
    "postcss-flexbugs-fixes": "3.2.0",
    "postcss-loader": "^2.0.6",
    "prettier": "^1.5.3",
    "promise": "^8.0.1",
    "react-dev-utils": "^4.0.1",
    "react-error-overlay": "^2.0.1",
    "style-loader": "^0.18.2",
    "sw-precache-webpack-plugin": "^0.11.4",
    "uglify-es": "^3.0.28",
    "url-loader": "^0.5.9",
    "webpack": "^3.5.2",
    "webpack-dev-server": "2.7.1",
    "webpack-manifest-plugin": "^1.3.1",
    "whatwg-fetch": "2.0.3"
  },
  "scripts": {
    "lint": "eslint src",
    "start-js": "node scripts/start.js",
    "start": "npm-run-all -p watch-css start-js",
    "build": "npm run build-css && node scripts/build.js",
    "pretest": "npm run lint",
    "test":
      "node scripts/test.js --env=jsdom --coverage --collectCoverageFrom='src/**/*.{js,jsx}'",
    "build-css":
      "node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/",
    "watch-css":
      "npm run build-css && node-sass-chokidar --include-path ./src --include-path ./node_modules src/ -o src/ --watch --recursive",
    "contracts":
      "rm -Rf src/contracts && cp -R ../crowdsale-contracts/build/contracts src/"
  },
  "proxy": {
    "/api": {
      "target": "http://localhost:3333",
      "ws": true
    },
    "/swaggerui": {
      "target": "http://localhost:3333"
    },
    "/docs": {
      "target": "http://localhost:3333"
    },
    "/ui.css": {
      "target": "http://localhost:3333"
    },
    "/logo.svg": {
      "target": "http://localhost:3333"
    }
  },
  "jest": {
    "collectCoverageFrom": ["src/**/*.{js,jsx}"],
    "setupFiles": ["<rootDir>/config/polyfills.js"],
    "testMatch": [
      "<rootDir>/tests/**/*.js?(x)",
      "<rootDir>/src/**/__tests__/**/*.js?(x)",
      "<rootDir>/src/**/?(*.)(spec|test).js?(x)"
    ],
    "testEnvironment": "node",
    "testURL": "http://localhost",
    "transform": {
      "^.+\\.(js|jsx)$": "<rootDir>/node_modules/babel-jest",
      "^.+\\.css$": "<rootDir>/config/jest/cssTransform.js",
      "^(?!.*\\.(js|jsx|css|json)$)": "<rootDir>/config/jest/fileTransform.js"
    },
    "transformIgnorePatterns": ["node_modules/(?!@settlemint)"],
    "moduleNameMapper": {
      "^react-native$": "react-native-web"
    },
    "moduleFileExtensions": ["web.js", "js", "json", "web.jsx", "jsx", "node"]
  },
  "babel": {
    "presets": ["react-app"]
  },
  "eslintConfig": {
    "extends": ["prettier", "react-app"],
    "plugins": ["prettier"]
  }
}
