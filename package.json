    "moment": "^2.21.0",
    "prop-types": "^15.6.1",
    "react": "^16.2.0",
    "react-awesome-countdowntimer": "^1.1.1",
    "react-dom": "^16.2.0",
    "react-dropzone": "^4.2.9",
    "react-intercom": "^1.0.14",
    "react-intl": "^2.4.0",
    "react-redux": "^5.0.7",
    "react-router": "^4.2.0",
    "react-router-redux": "^5.0.0-alpha.6",
    "react-scripts": "^1.1.1",
    "redux": "^3.7.2",
